<h2> Complaint Log </h2><br>
<table class="table table-striped table-bordered">
	<tr>
		<th>Id</th>
		<th>Customer</th>
		<th>Employee</th>
		<th>Issue</th>
		<th>Status</th>
	</tr>
	<% @complaints.each_with_index do |complaint,index| %>
		<tr>
			<td><%= index + 1 %></td>
			<td><%= complaint.customer.first_name  %></td>
			<td><%= complaint.employee.name  %></td>
			<td><%= complaint.issue %></td>
			<td><%= complaint.status%></td>
			<td><%= link_to 'Edit', edit_complaint_path(complaint) %></td>
			<td><%= link_to 'Destroy', complaint ,method: :delete, data: {confirm: 'Are you sure'} %></td>
		</tr>
	<% end %>
</table> 
