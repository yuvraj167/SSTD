<h2> Complaints Log </h2><br>
<table class="table table-striped table-bordered">
	<tr class="info">
		<th></th>
		<th><%= sort_link(@q, :customer_first_name, 'Customer', default_order: :desc) %></th>
		<th><%= sort_link(@q, :employee_id, 'Employee', default_order: :desc) %></th>
		<th><%= sort_link(@q, :issue, 'Issue', default_order: :desc) %></th>
		<th><%= sort_link(@q, :status, 'Status', default_order: :desc) %></th>
		<th><%= sort_link(@q, :updated_at, 'Updated At', default_order: :desc) %></th>
		<th></th>
		<th></th>
	</tr>
	<% @complaints.each_with_index do |complaint,index| %>
		<tr>
			<td><%= index + 1 %></td>
			<td><%= complaint.customer.first_name.capitalize  %></td>
			<td><%= complaint.employee.name.capitalize  %></td>
			<td><%= complaint.issue %></td>
			<td><%= complaint.status%></td>
			<td><%= complaint.updated_at.strftime '%d-%m-%Y' %></td>
			<td><%= link_to 'Edit', edit_complaint_path(complaint) %></td>
			<td><%= link_to 'Destroy', complaint ,method: :delete, data: {confirm: 'Are you sure'} %></td>
		</tr>
	<% end %>
</table> 


<%= button_to('Add Complaint', new_complaint_path, :class => 'btn btn-large btn-primary',:method => :get)  %><br>


	