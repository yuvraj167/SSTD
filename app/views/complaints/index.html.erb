<h2> Complaint Log </h2>
<table class="table table-striped table-bordered">
	<tr>
		<th>Id</th>
		<th>Issue</th>
		<th>Customer</th>
		<th>Assigned Employee</th>
	</tr>
	<% @complaints.each do |complaint| %>
		<tr>
			<td><%= complaint.id %></td>
			<td><%= complaint.issue %></td>
			<td><%= complaint.customer.name  %></td>
			<td><%= complaint.employee.name  %></td>
			<td><%= link_to 'Show', complaint %></td>
			<td><%= link_to 'Edit', edit_comlaint_path(complaint) %></td>
			<td><%= link_to 'Destroy', complaint ,method: :delete, data: {confirm: 'Are you sure'} %></td>
		</tr>
	<% end %>
</table> 
