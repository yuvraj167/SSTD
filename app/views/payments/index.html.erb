<h2> Payment </h2><br>
<table class="table table-striped table-bordered">
	<tr>
		<th></th>
		<th>Name</th>
		<th>Payment Month</th>
		<th>Status</th>
	</tr>
	<% @payment.each_with_index do |payment,index|  %>
	<tr>
		<td><%= index + 1%></td>
		<td><%= payment.customer.first_name %></td>
		<td><%= payment.payment_date.strftime("%B, %Y ") %></td>
		<td><%= payment.status %></td>
	</tr>
	<% end %>
</table>

<%= will_paginate @payment %>


<%= button_to('Add payment', new_payment_path, :class => 'btn btn-large btn-primary',:method => :get)  %><br>




