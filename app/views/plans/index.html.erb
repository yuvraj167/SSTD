<h1>Plans</h1><br>
<table class="table table-striped table-bordered">
	<tr>
		<th></th>
		<th>Name</th>
		<th>Price</th>
		<th>Plan Details</th>
	</tr>
	<% @plans.each_with_index do |plan,index| %>
		<tr>
			<td><%= index+1 %></td>
			<td><%= plan.name %></td>
			<td><%= plan.price %></td>
			<td><%= plan.plan_details %></td>
			<td><%= link_to 'Edit', edit_plan_path(plan) %></td>
		</tr>
	<% end %>
</table> 


<%= button_to('Add Plan', new_plan_path, :class => 'btn btn-large btn-primary',:method => :get)  %><br>
