<body class="devise">
  <div class="sign_in">
      <h2 style="color: #534292">Login</h2><br>
          <div class="details">
            <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= f.email_field :email, placeholder: "Email address", icon: "user", hide_label: true %>
              <%= f.password_field :password, placeholder: "Password", hide_label: true,icon: "lock" %>
              <%= f.check_box :remember_me %>
              <%= f.submit 'Log in' , class: "btn btn-primary btn-lg btn-block" %>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
  </div>
</body>
