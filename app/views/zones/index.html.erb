<h1>Zone</h1><br>
<table class="table table-striped table-bordered">
	<tr>
		<!-- <th>No</th> -->
		<th></th>
		<th>Zone</th>
		<th>Engineer</th>
		<th>Contact</th>
		<th>Comments</th>
	</tr>
	<% @zones.each_with_index do |zone,index| %>
		<tr>	
			<td><%= index+1%></td>
			<td><%= zone.name %></td>
			<td><%= zone.employee.name %></td>
			<td><%= zone.employee.mobile_no %></td>
			<td><%= zone.comments %></td>
			<td><%= link_to 'Edit', edit_zone_path(zone) %></td>
		</tr>
	<% end %>
</table> 


<%= button_to('Add Zone', new_zone_path, :class => 'btn btn-large btn-primary',:method => :get)  %><br>
