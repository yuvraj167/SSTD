<div style="position: relative;">
	<h1>Customers List</h1>
	<div style="position: absolute; right: 0; top: 0; text-align: right; max-width: 50%; overflow: hidden">
		<%= form_tag(customers_path, :method => "get", id: "search-form") do %>
			<%= text_field_tag :search, params[:search], placeholder: "Search Customers" %>
			<%= submit_tag "Search" %>
		<% end %>
	</div>
</div>
<br>

<table class="table table-striped table-bordered">
	<tr>
		<th></th>
		<th>Customer Id </th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Zone</th>
		<th>Plan</th>
		<th>Registered Date</th>
	</tr>
	<% @customers.each_with_index do |customer,index| %>
		<tr>
			<td><%= index +1 %></td>
			<td><%= customer.customer_friendly_id %></td>
			<td><%= customer.first_name %></td>
			<td><%= customer.last_name %></td>
			<td><%= customer.zone.name %></td>
			<td><%= customer.plan.name%></td>
			<td><%= customer.created_at.strftime '%d-%m-%Y'	 %></td>
			<td><%= link_to 'Show', customer %></td>
			<td><%= link_to 'Edit', edit_customer_path(customer) %></td>
			<td><%= link_to 'Destroy', customer ,method: :delete, data: {confirm: 'Are you sure'} %></td>
		</tr>
	<% end %>
</table> 

<%= will_paginate @customers %>

<div class="row">
	<%= button_to('Download as Excel', customers_path(:format => :xls),:class => 'btn btn-large btn-primary',:method => 'get')%><br>
</div>

